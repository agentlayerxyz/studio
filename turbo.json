{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",

  "globalEnv": [
    "LOG_LEVEL",
    "PUMPAGENT_API_ROOT",
    "PUMPAGENT_API_KEY",
    "AGENT_API_KEY"
  ],

  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },

    "test": {},

    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
